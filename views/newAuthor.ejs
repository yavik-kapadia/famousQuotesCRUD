<%- include("partials/header.ejs") %>
<div class="page-container">
    <h1 class="text-center">Adding a new Author</h1>
    <div class="content d-flex justify-content-center">

        <form method="POST" action="/authors/new">
            <label for="fname">First Name:</label>
            <input type="text" name="fName" id="fname"><br>

            <label for="lname">Last Name:</label>
            <input type="text" name="lName" id="lname"><br>

            <label for="dob">Date of Birth:</label>
            <input type="date" name="birthDate" id="dob"><br>

            <label for="dod">Date of Death:</label>
            <input type="date" name="deathDate" id="dod"><br>

            <label for="sex">Gender:</label>
            <div>
                <input type="radio" name="sex" id="male" value="M">
                <label for="male">Male</label>
            </div>
            <div>
                <input type="radio" name="sex" id="female" value="F">
                <label for="female">Female</label>
            </div>
            <br>
            <label for="profession">Profession:</label>
            <input type="text" name="profession" id="profession"><br>
            <label for="country">Country</label>
            <input type="text" name="country" id="country"><br>
            <label for="portrait">portrait:</label>
            <input type="url" name="portrait" id="portrait" placeholder="enter a direct url to image">
            <div>
                <label for="biography">Biography:</label><br>
                <textarea name="biography" id="biography" cols="30" rows="10"></textarea><br>
            </div>


            <br>
            <button>Add Author</button>
        </form>
        <% if (typeof message != "undefined"){ %>
        <h3><%= message %></h3>
        <% } %>
    </div>
</div>
<%- include("partials/footer.ejs") %>
