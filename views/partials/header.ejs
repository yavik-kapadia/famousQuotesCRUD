<body>
<div class="nav-container">
    <!-- Image and text -->
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand" href="/">
            <img src="../img/quotely.png" width="30" height="30" class="d-inline-block align-top" alt="">uotely
        </a>


            <% if(typeof auth != "undefined" && auth === true ){ %>

                <form class="form-inline" action="/authors/new">
                    <button class="btn btn-primary">Add Authors</button>
                </form><br>

                <form class="form-inline" action="/quotes/new">
                    <button class="btn btn-primary">Add Quotes</button>
                </form><br>

            <% } %>
            <form class="form-inline" action="/authors">
                <button class="btn btn-primary">List of Authors</button>
            </form>
            <br>

            <form class="form-inline" action="/quotes">
                <button class="btn btn-primary">List of Quotes</button>
            </form>


        <% if(typeof auth != "undefined" && auth === true ){ %>
            <form class="form-inline" action="/logout">
                <button class="btn btn-outline-danger">logout</button>
            </form>
        <% } else { %>

            <form class="form-inline" action="/login">
                <button class="btn btn-outline-success">Login</button>
            </form>
        <% } %>
    </nav>
</div>